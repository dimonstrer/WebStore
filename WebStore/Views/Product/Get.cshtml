@using WebStore.Models
@model ProductModel
@{
    ViewBag.Title = @Model.Name;
}

<div>
    <div align="center" class="body-content-get-product">
        <span class="product-main-manage-back product-main-manage">
            <button class="btn btn-default" type="button" onclick="window.location.href='@Request.UrlReferrer'">Вернуться</button>
        </span>
        <div class="product-main-info product-main-manage">
            <input type="button" class="btn" value="Редактировать" onclick="window.location.href='@Url.Action("Edit","Product", new { id = Model.ProductId })'" />
            <input type="button" class="btn btn-danger" value="Удалить"
                   onclick="if (confirm(`Вы действительно хотите удалить этот продукт?`)) window.location.href = '@Url.Action("Delete","Product", new { id = Model.ProductId })'" />
            </a>
        </div>
        <div class="product-main-info product-main-text">
            <h2>@Html.DisplayFor(m => Model.Name)</h2>
            <h4>@Html.DisplayFor(m => Model.Category)</h4>
            <h4>@Html.DisplayFor(m => Model.Description)</h4>
            <h1>@Model.Price.ToString("c")</h1>
        </div>
        <div>
            <img class="product-image" src="@Url.Action("Image", "Product", new { id = Model.ProductId })" />
        </div>
    </div>
</div>